<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAddItemToList"
    tools:context=".addItemViaKeyboardActivity">

    <Button
        android:id="@+id/add_item_button"
        android:layout_width="206dp"
        android:layout_height="68dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorButtonActive"
        android:text="@string/add_item_to_list"
        app:layout_constraintEnd_toEndOf="@+id/add_item_edit_text"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/add_item_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/add_amount_of_item" />

    <EditText
        android:id="@+id/add_item_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/add_item_hint"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_amount_of_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/add_amount_of_item_hint"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/add_item_edit_text"
        app:layout_constraintStart_toStartOf="@+id/add_item_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/add_item_edit_text" />
</android.support.constraint.ConstraintLayout>